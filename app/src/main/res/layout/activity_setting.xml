<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/action_bar_custom" />

<TextView
    android:id="@+id/bt_about_us"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:textSize="@dimen/sp_14"
    android:text="@string/about_us"
    android:drawableStart="@mipmap/icon_about_us"
    android:layout_gravity="center_vertical"
    android:drawablePadding="@dimen/dp_10"
    android:drawableEnd="@mipmap/icon_main_gray_next"
    android:layout_marginTop="@dimen/dp_10"
    android:padding="@dimen/margin_15"
    android:textColor="@color/MaterialGrey600"
    />
<LinearLayout
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:background="@color/White"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
android:layout_weight="1"
        android:textSize="@dimen/sp_14"
        android:text="@string/system_update"
        android:drawableStart="@mipmap/icon_system_update"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/dp_10"

        android:padding="@dimen/margin_15"
        android:textColor="@color/MaterialGrey600"
        />
    <TextView
        android:id="@+id/bt_system_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="@dimen/sp_14"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/dp_10"
        android:drawableEnd="@mipmap/icon_main_gray_next"
android:text=""
        android:padding="@dimen/margin_15"
        android:textColor="@color/MaterialGrey600"
        />
</LinearLayout>



    <com.flyco.roundview.RoundTextView
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:padding="@dimen/margin_15"
        android:text="退出系统"
        android:textColor="@color/White"
        app:rv_backgroundColor="@color/Red"
        app:rv_cornerRadius="10dp" />


</LinearLayout>