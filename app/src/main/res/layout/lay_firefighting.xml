<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_15"
    android:id="@+id/rlLay"
    android:background="@color/White"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_state"
        android:background="@mipmap/icon_firefighting_stand"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_state"
        android:layout_marginStart="@dimen/dp_10"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/MaterialGrey600"
            android:textSize="14sp"
            android:text="开发消防"
            android:id="@+id/tv_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/MaterialGrey600"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:text="位置"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_4"
            android:drawableStart="@mipmap/icon_firefighting_location"
            android:id="@+id/tv_location"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/MaterialGrey600"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:text="@string/people"
            android:id="@+id/tv_people"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_4"
            android:drawableStart="@mipmap/icon_firefighting_people"
            />
    </LinearLayout>
    <com.flyco.roundview.RoundTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/tv_see_details"
        android:text="查看详情"
        android:textColor="@color/White"
        app:rv_cornerRadius="@dimen/margin_5"
        app:rv_backgroundColor="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>